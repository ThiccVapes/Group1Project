<!DOCTYPE html>
<html>
<head>
  <title>Group1Project</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div>
        <% if current_user %>
          Signed in as <strong><%= current_user.name %></strong>!
          <%= link_to "Sign out", signout_path, id: "game#index" %>
        <% else %>
          <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>

        <% end %>
      </div>
      <div class="container">
        <header>
          <h1>"Not" Asteroids</h1>
        </header>

        <% if current_user %>
          <nav>
            <%=link_to_unless_current 'Home', game_url %>
            <%=link_to_unless_current 'LeaderBoard', leaderboard_url %>
          </nav>
      <% end %>
      <div>
      <%= yield %>
      </div>




</body>
</html>
